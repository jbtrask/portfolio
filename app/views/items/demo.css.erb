
#sample {
	background-color: #0000FF;
	margin: 0px 0px;
	width: 50px;
	min-width: 50px;
	height: 50px;
	min-height: 50px;	
}

@media only screen and (max-width: <%= @screens[0][0] %>px), only screen and (max-height: <%= @screens[0][1] %>px) {
	
	#sample {
		width: 10px;
		min-width: 10px;
		height: 10px;
		min-height: 10px;
	}

}

<% @screens.each_with_index do |screen, i| %>
@media only screen and (min-width: <%= screen[0] %>px) and (min-height: <%= screen[1] %>px) {
	
	#sample {
		width: <%= @elements[i][0] %>px;
		min-width: <%= @elements[i][0] %>px;
		height: <%= @elements[i][1] %>px;
		min-height: <%= @elements[i][1] %>px;
	}
	
}
<% end %>
