	background-color: #008000;
	color: #FFFFFF;
}

#sidebar {
  width: 100%;
  min-width: 100%;
  height: <%= 100.0 - CONTENT_PERCENT['standard'] %>%;
  min-height: <%= 100.0 - CONTENT_PERCENT['standard'] %>%;
}

#main {
  top: <%= 100.0 - CONTENT_PERCENT['standard'] %>%;
  left: 0;
  width: 100%;
  min-width: 100%;
  height: <%= CONTENT_PERCENT['standard'] %>%;
  min-height: <%= CONTENT_PERCENT['standard'] %>%;
}

<%= render :partial => "items/style/smart_sizes", :locals => { :name => 'standard portrait', :rows => 4, :columns => 6, :vertical_content => CONTENT_PERCENT['standard'], :horizontal_content => 100.0 } %>
