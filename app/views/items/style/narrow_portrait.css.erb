#css_info {
	background-color: #008000;
  color: #FFFFFF;
}

#layout:after {
	content: "layout:  narrow portrait";
}

#sidebar {
  width: 100%;
  min-width: 100%;
  height: <%= 100.0 - CONTENT_PERCENT['long'] %>%;
  min-height: <%= 100.0 - CONTENT_PERCENT['long'] %>%;
}

#main {
  top: <%= 100.0 - CONTENT_PERCENT['long'] %>%;
  left: 0;
  width: 100%;
  min-width: 100%;
  height: <%= CONTENT_PERCENT['long'] %>%;
  min-height: <%= CONTENT_PERCENT['long'] %>%;
}

<%= render :partial => "items/style/smart_sizes", :locals => { :rows => 4, :columns => 6, :vertical_content => CONTENT_PERCENT['long'], :horizontal_content => 100.0 } %>
