<%= render "items/style/smart_sizes" %>
#css_info {
	background-color: #000080;
  color: #FFFFFF;
}

#layout:after {
	content: "layout:  normal landscape";
}

#sidebar {
  width: <%= @sidebar_width['normal'] %>%;
  min-width: <%= @sidebar_width['normal'] %>%;
  height: 100%;
  min-height: 100%;
}

#main {
  top: 0;
  left: <%= @sidebar_width['normal'] %>%;
  width: <%= (100 - @sidebar_width['normal']) %>%;
  min-width: <%= (100 - @sidebar_width['normal']) %>%;
  height: 100%;
  min-height: 100%;
}

<%= render :partial => "items/style/sizes", :locals => { :h_count => @h_count, :v_count => @v_count, :width => (100 - @sidebar_width['normal']), :height => 100} %>
