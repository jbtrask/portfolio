<div id="filter">
	<%= form_tag(root_path, :method => "post") do %>
		<div><%= select_tag(:classification, options_for_select([['Works on Paper', 1], ['Magazine', 2], ['Web', 3]]), :id => "classification") %></div>
		<div><%= select_tag(:period, options_for_select([['2010 -', 1], ['2000 - 2009', 2], ['1990 - 1999', 3], ['1980 - 1989', 4], ['1970 - 1979', 5]]), :id => "date") %></div>
		<div><%= submit_tag("Go", :id => "go") %></div>
	<% end %>
</div>
